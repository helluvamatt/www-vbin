{% extends "default.twig" %}
{% block title %}vBin | {{ title }}{% if title is empty %}Editor{% endif %}{% endblock %}
{% block stylesheets %}{% endblock %}
{% block navigation %}
<!-- Navigation -->

<ul class="nav navbar-nav">
	<li><a href="{{ urlFor('/:id', {'id': model.shareId}) }}" id="tbView"><i class="fa fa-fw fa-arrow-left"></i>Back to Paste</a></li>
</ul>

{% endblock %}
{% block content %}
<!-- Content -->
<div class="container-fluid">
	<div class="page-header">
		<h1>Revision History</h1>
	</div>
{% if historyRecords %}
	<table class="table">
		<thead>
			<tr>
				<th style="width: 100px;" scope="col">ID</th>
				<th>Title</th>
				<th style="width: 200px;" scope="col">Created</th>
				<th style="width: 100px;" scope="col">&nbsp;</th>
			</tr>
		</thead>
		<tbody>
{% for historyItem in historyRecords %}
			<tr{% if historyItem.id == model.id %} class="info with-tooltip" title="Selected revision"{% endif %}>
				<td><a href="{{ urlFor('/history/:id', {'id': historyItem.shareId}) }}">{{ historyItem.shareId }}</a></td>
				<td>{{ historyItem.title }}</td>
				<td class="with-tooltip" title="{{ historyItem.created.toDateTimeString() }}"><i class="fa fa-fw fa-clock-o"></i>{{ historyItem.created.diffForHumans() }}</td>
				<td>
{% if historyItem.id != model.id %}
					<a href="#" class="btn btn-default btn-xs with-tooltip" title="Compare with selected revision"><i class="fa fa-fw fa-exchange"></i>Compare</a>
{% endif %}
				</td>
			</tr>
{% endfor %}
		</tbody>
	</table>
{% else %}
	<div class="row">
		<div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4 alert alert-danger center">No history for this item.</div>
	</div>
{% endif %}
</div>

{% endblock %}
{% block javascripts %}
<!-- Additional javascripts -->

{% endblock %}
