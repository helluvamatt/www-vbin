{% extends "default.twig" %}
{% block title %}vBin | {{ title }}{% if title is empty %}Editor{% endif %}{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ siteUrl('/assets/css/codemirror.css') }}">
<link rel="stylesheet" type="text/css" href="{{ siteUrl('/assets/css/twilight.css') }}">
<link rel="stylesheet" type="text/css" href="{{ siteUrl('/assets/css/editor.css') }}">
{% endblock %}
{% block navigation %}
<!-- Navigation -->

<ul class="nav navbar-nav">
	<li><a href="{{ siteUrl('/') }}" class="tb-action" data-action="new"><i class="fa fa-fw fa-file-o"></i>New</a></li>
	<li><a href="#" class="tb-action" data-action="new"><i class="fa fa-fw fa-floppy-o"></i>Save</a></li>
	<li><a href="#" class="tb-action" data-action="editor_mode"><i class="fa fa-fw fa-file-code-o"></i>Editor Mode</a></li>
	<!-- li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Edit <span class="caret"></span></a></li -->
</ul>

{% endblock %}
{% block content %}
<form id="editorForm" method="post" action="{{ urlFor('save') }}" data-previous="{{ previous_id }}" data-post-action="{{ urlFor('save') }}">
	<input type="hidden" name="previous_id" value="{{ previous_id }}" />
	<div id="titleFieldContainer">
		<input type="text" name="title" id="titleField" placeholder="Paste Title (Optional)" value="{{ previous_title }}">
	</div>
	<div id="pasteFieldContainer">
		<textarea id="pasteField" name="paste" rows="15">{{ previous_paste }}</textarea>
	</div>
</form>
{% endblock %}
{% block javascripts %}
<script type="text/javascript" src="{{ siteUrl('/assets/js/vendor/codemirror.js') }}"></script>
<script type="text/javascript" src="{{ siteUrl('/assets/js/editor.js') }}"></script>
{% endblock %}
